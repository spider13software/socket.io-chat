<!doctype html>
<html>
  <head>
    <title>Chat</title>
    <link rel="stylesheet" href="/assets/styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/assets/scripts.js"></script>
  </head>
  <body>
    <ul id="messages">
    </ul>

    <form class="form" id="login-form">
      <div class="label">Login:</div>
      <input class="input" name="login" autocomplete="off" />
      <div class="label">Password:</div>
      <input class="input" name="password" autocomplete="off" />
      <a href="#" class="link register-link">Register</a>
      <button type="submit">Login</button>
    </form>

    <form class="form hide" id="chat-form" action="">
      <input class="input" name="message" autocomplete="off" />
      <button type="submit">Send</button>
    </form>
  </body>
</html>
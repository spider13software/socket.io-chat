<%- include('./_header.ejs') %>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5><%- create ? 'Create user' : 'Edit user' %></h5>
        </div>
        <div class="card-body">
<% if (flash) { %>
          <div class="alert alert-danger" role="alert">
            <%- flash %>
          </div>
<% } %>
          <form method="POST" action="/users/add">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" name="login" class="form-control" id="name" placeholder="Enter name" value="John Doe">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" class="form-control" id="email" placeholder="Enter email" value="johndoe@example.com">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="password" placeholder="Enter password">
            </div>
            <div class="mb-3">
              <label for="confirm-password" class="form-label">Confirm Password</label>
              <input type="password" name="confirmPassword" class="form-control" id="confirm-password" placeholder="Confirm password">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./_footer.ejs') %>

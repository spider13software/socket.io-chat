<%- include('./_header.ejs') %>
  <div class="container mt-4">

    <div class="row">
      <div class="col-lg-3">
        <div class="card mt-4">
          <div class="card-header">
            <h5>Select a Conversation</h5>
          </div>
          <div class="card-body">
            <ul class="list-group">
              <li class="list-group-item"><a href="/chat">Common</a></li>
<% users.forEach((user) => { %>
              <li class="list-group-item"><a href="/chat/<%- user._id %>"><%- user.login %></a></li>
<% }); %>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="container mt-4">
          <h1>Chat</h1>

          <div class="card mt-4">
            <div class="card-body">
              <div class="chat-messages" id="messages">
                <div class="message">
                  <div class="message-info">
                    <span class="message-sender">John Doe</span>
                    <span class="message-time">10:30 AM</span>
                  </div>
                  <div class="message-content">
                    Hello, how are you?
                  </div>
                </div>
                <div class="message">
                  <div class="message-info">
                    <span class="message-sender">Jane Smith</span>
                    <span class="message-time">10:35 AM</span>
                  </div>
                  <div class="message-content">
                    I'm good, thanks! How about you?
                  </div>
                </div>
                <!-- Дополнительные сообщения -->
              </div>
            </div>
          </div>

          <form id="chat-form">
            <div class="input-group mt-4">
              <input type="text" name="message" class="form-control" placeholder="Type your message...">
              <button class="btn btn-primary" type="submit">Send</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(function () {
    var socket = io();

    var messages = document.getElementById('messages');
    var form = document.getElementById('form');
    var input = document.getElementById('input');
    
    socket.on('chat message', function(msg) {
      $('#messages').append(`<div class="message"><div class="message-info"><span class="message-sender">Jane Smith</span><span class="message-time">10:35 AM</span></div><div class="message-content">${msg}</div></div>`);
    });

    $('#chat-form').submit(function (event) {
      event.preventDefault();

      const message = $('#chat-form input[name=message]').val();
      socket.emit('chat message', {
        message,
        to: <%- chatId ? `'${chatId}'` : 'null' %>,
      });
      $('#chat-form input[name=message]').val('');
    });
  });
</script>
<%- include('./_footer.ejs') %>